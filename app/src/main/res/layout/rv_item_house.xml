<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_20"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_15">

        <ImageView
            android:id="@+id/iv_house"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:src="@drawable/normal_house" />

        <TextView
            android:id="@+id/tv_houseType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_house"
            android:text="房子" />

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_houseType"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toEndOf="@+id/iv_house"
            android:text="位于某个角落" />

        <TextView
            android:id="@+id/tv_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_position"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toEndOf="@+id/iv_house"
            android:text="面积：" />

        <TextView
            android:id="@+id/tv_house_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_area"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toEndOf="@+id/iv_house"
            android:text="信息"
            android:visibility="gone" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>